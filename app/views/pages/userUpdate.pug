extends ../admin/layout

block css
    link(rel="stylesheet" href="/css/admin/userUpdate.css")

block content
    div(id="content" class="content")
        form(method="POST" action="/admin/user/update")
            input(type="hidden" name="user[_id]" value=userDetail._id)
            div
                label(for="signUpName") 用户名
                input(id="signUpName" name="user[name]" type="text" value=userDetail.name)
            div
                label(for="signUpNickName") 昵称
                input(id="signUpNickName" name="user[nickName]" type="text" value=userDetail.nickName)
            div
                label(for="signUpPhone") 手机
                input(id="signUpPhone" name="user[phone]" type="text" value=userDetail.phone)
            div
                label(for="signUpEmail") 邮箱
                input(id="signUpEmail" name="user[email]" type="text" value=userDetail.email)
            div
                if userDetail.sex=="male"
                    label(for="signUpSexMale") 男
                    input(id="signUpSexMale" name="user[sex]" type="radio" value="male" checked="checked")
                    label(for="signUpSexFemale") 女
                    input(id="signUpSexFemale" name="user[sex]" type="radio" value="female")
                else
                    label(for="signUpSexMale") 男
                    input(id="signUpSexMale" name="user[sex]" type="radio" value="male")
                    label(for="signUpSexFemale") 女
                    input(id="signUpSexFemale" name="user[sex]" type="radio" value="female" checked="checked")
            div
                label(for="signUpLevel") 等级
                input(id="signUpLevel" name="user[level]" type="number" value=userDetail.level)
            div
                mixin belong(value,company)
                    if(value==userDetail.belong)
                        option(value=value selected)=company
                    else
                        option(value=value)=company
                label(for="signUpBelong") 所属公司
                select(id="signUpBelong" name="user[belong]")
                    +belong("main","总部")
                    +belong("shanghai","上海分公司")
                    +belong("wuhan","武汉分公司")
                    +belong("changsha","长沙分公司")
                    +belong("shenzhen","深圳分公司")
                    +belong("hunan","湖南分公司")
                    +belong("hefei","合肥分公司")
                    +belong("guangzhou","广州分公司")
            div
                input(id="submit" type="submit" value="提交")
                input(id="reset" type="reset" value="重置")

block js
    script(src="/admin/js/userUpdate.js")
