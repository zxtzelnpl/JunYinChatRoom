extends ../admin/layout

block css
    link(rel="stylesheet",href="/css/admin/user.css")

block content
    .container
        .row
            form(method="POST" action="/admin/user/query")
                div
                    label(for="searchName") 用户名:
                    input(id="searchName" name="search[name]" type="text")
                div
                    label(for="searchNickName") 昵称:
                    input(id="searchNickName" name="search[nickName]" type="text")
                div
                    label(for="searchPhone") 手机:
                    input(id="searchPhone" name="search[phone]" type="text")
                div
                    label(for="searchEmail") 邮箱:
                    input(id="searchEmail" name="search[email]" type="text")
                div
                    label(for="searchSex") 性别:
                    input(id="searchSex" name="search[sex]" type="text")
                div
                    label(for="searchBelong") 所属公司:
                    input(id="searchBelong" name="search[belong]" type="text")
                div
                    label(for="searchForbidden") 是否被禁用:
                    input(id="searchForbidden" name="search[forbidden]" type="text")
                div
                    label(for="searchOnline") 是否在线:
                    input(id="searchOnline" name="search[online]" type="text")
                div
                    button.btn.btn-primary(type="submit") 查询
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 用户名
                        th 昵称
                        th 手机
                        th 邮箱
                        th 性别
                        th 所属公司
                        th 是否被禁用
                        th 创建时间
                        th 上次修改时间
                        th 是否在线
                        th 查看
                        th 修改
                        th 删除
                tbody
                    if users&&users.length>0
                        each item in users
                            tr(class="item-id-"+item._id)
                                td #{item.name}
                                td #{item.nickName}
                                td #{item.phone}
                                td #{item.email}
                                td #{item.sex}
                                td #{item.belong}
                                td #{item.forbidden}
                                td #{moment(item.createAt).format('MM/DD/YYYY')}
                                td #{moment(item.updateAt).format('MM/DD/YYYY')}
                                td 是否在线
                                td: a(target="_blank", href= "/admin/user/"+item._id) 查看
                                td: a(target="_blank", href= "/admin/user/update/"+item._id) 修改
                                td: button.btn.btn-danger.del(type="button", data-id=item._id) 删除

block js
    script(src="/socket.io/socket.io.js")
    script(src="/admin/js/user.js")
