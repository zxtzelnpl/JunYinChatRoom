extends layout/layout
block css
    <!-- libraries -->
    link(href="/vendor/css/lib/font-awesome.css",rel="stylesheet")
    <!-- this page specific styles -->
    link(href="/vendor/css/compiled/user-list.css",rel="stylesheet",media="screen")
block content
    - var room=(parseInt(user.level))>1000?'all':user.room
    .content
        .container-fluid
            #pad-wrapper.users-list
                .row-fluid.header
                    h3 用户列表
                    .span10.pull-right
                        input.span5.search(type="text",placeholder="Type a user's name...")
                        .ui-dropdown
                            .head(data-toggle="tooltip",title="Click me!")
                                | 筛选
                                i.arrow-down
                            .dialog
                                .pointer
                                    .arrow
                                    .arrow_border
                                .body
                                    .title 筛选条件
                                    .form
                                        select
                                            option="Name"
                                            option="Name"
                                            option="Name"
                                            option="Name"
                                        select
                                            option="is equal to"
                                            option="is equal to"
                                            option="is equal to"
                                            option="is equal to"
                                        input(type="text")
                                        a.btn-flat.small 增加筛选条件
                        a.btn-flat.success.pull-right(href="/admin/usersignup/"+room) 增加
                .row-fluid.table
                    table.table.table-hover
                        thead
                            tr
                                th.span1 用户名
                                th.span1 昵称
                                th.span1 手机
                                th.span1 等级
                                th.span1 所属公司
                                th.span1 是否被禁用
                                th.span1 创建时间
                                th.span1 上次修改时间
                                th.span1 是否在线
                                th.span1 查看
                                th.span1 修改
                                th.span1 删除
                        tbody
                            if users && users.length > 0
                                each item in users
                                    tr(class="item-id-" + item._id)
                                        td #{item.name}
                                        td #{item.nickName}
                                        td #{item.phone}
                                        td #{item.level}
                                        if(item.room && item.room.title)
                                            td #{item.room.title}
                                        else
                                            td 未知
                                        td
                                            if(item.forbidden)
                                                button.btn.btn-success.change(type="button",data-id=item._id) 解禁
                                            else
                                                button.btn.btn-warning.change(type="button",data-id=item._id) 禁用
                                        td #{moment(item.createAt).format('MM/DD/YYYY')}
                                        td #{moment(item.updateAt).format('MM/DD/YYYY')}
                                        td
                                            if(item.online)
                                                | 在线
                                            else
                                                | 离线
                                        td: a(target="_blank", href= "/admin/userdetail/" + item._id) 查看
                                        td: a(target="_blank", href= "/admin/userupdate/" + item._id) 修改
                                        td: button.btn.btn-danger.del(type="button", data-id=item._id) 删除
                    .pagination.pull-right
                        ul
                            li: a(href="javascript:void(0)") 第
                            - var n=1
                            while n <= totalPageNum
                                li: a(href="/admin/userlist/" + room + "/" + n)=n++
                            li: a(href="javascript:void(0)") 页

block script
    script(src="/vendor/js/jquery-3.2.1.min.js")
    script(src="/vendor/js/bootstrap.min.js")
    script(src="/vendor/js/theme.js")
    script(src="/socket.io/socket.io.js")
    script(src="/js/userList.js")
