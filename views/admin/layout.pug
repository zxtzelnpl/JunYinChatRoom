doctype
html
    head
        meta(charset="utf-8")
        title #{title}
        link(rel="stylesheet",href="/admin/css/bootstrap.min.css")
        block css
    body
        .container
            .row
                .col-sm-2
                    if user
                        .row
                            .col-sm-12
                                p.col-sm-12.col-xs-2.col-xs-1.glyphicon.glyphicon-user.label.label-default#userName #{user.name}
                                p.col-sm-12.col-xs-2.col-xs-1.glyphicon.glyphicon-signal.label.label-default#userLevel #{user.level}
                                p.col-sm-12.col-xs-2.col-xs-1.glyphicon.glyphicon-flag.label.label-default#userBelong #{user.belong}
                                a#signOut.col-xs-2.col-xs-offset-4.col-sm-12.col-sm-offset-0.btn.btn-danger.btn-sm 登出
                        .row
                            .col-sm-12
                                ul.nav.nav-pills.nav-stacked
                                    li(role="presentation")
                                        a
                                            | 图片管理
                                            span.caret
                                    li(role="presentation").dropdown
                                        a.collapsed(data-toggle="collapse" href="#userlist" role="button" aria-haspopup="true" aria-expanded="false")
                                            | 用户管理
                                            span.caret
                                        ul#userlist.collapse
                                            li: a 用户列表
                                            li: a 用户查询
                                    li(role="presentation")
                                        a
                                            | 聊天信息管理
                                            span.caret
                .col-sm-10
                    block content
    script(src="/admin/js/jquery.js")
    script(src="/admin/js/bootstrap.js")
    block js
