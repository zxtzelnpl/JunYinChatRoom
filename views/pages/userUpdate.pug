extends ../admin/layout

block css
    link(rel="stylesheet" href="/css/admin/userUpdate.css")

block content
    .row
        form.form-horizontal(method="POST" action="/admin/user/update")
            input(type="hidden" name="user[_id]" value=userDetail._id)
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label(for="signUpName") 用户名：
                div.col-sm-4
                    input.form-control(id="signUpName" name="user[name]" type="text" value=userDetail.name)
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label(for="signUpNickName") 昵称：
                div.col-sm-4
                    input.form-control(id="signUpNickName" name="user[nickName]" type="text" value=userDetail.nickName)
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label(for="signUpPhone") 手机：
                div.col-sm-4
                    input.form-control(id="signUpPhone" name="user[phone]" type="text" value=userDetail.phone)
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label(for="signUpEmail") 邮箱：
                div.col-sm-4
                    input.form-control(id="signUpEmail" name="user[email]" type="text" value=userDetail.email)
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label 性别：
                div.col-sm-4
                    if userDetail.sex=="male"
                        label.radio-inline(for="signUpSexMale")
                            input(id="signUpSexMale" name="user[sex]" type="radio" value="male" checked="checked")
                            | 男
                        label.radio-inline(for="signUpSexFemale")
                            input(id="signUpSexFemale" name="user[sex]" type="radio" value="female")
                            | 女
                    else
                        label.radio-inline(for="signUpSexMale")
                            input(id="signUpSexMale" name="user[sex]" type="radio" value="male")
                            | 男
                        label.radio-inline(for="signUpSexFemale")
                            input(id="signUpSexFemale" name="user[sex]" type="radio" value="female" checked="checked")
                            | 女
            div.form-group
                label.col-sm-2.col-sm-offset-3.control-label(for="signUpLevel") 等级：
                div.col-sm-4
                    input.form-control(id="signUpLevel" name="user[level]" type="number" value=userDetail.level)
            div.form-group
                mixin belong(value,company)
                    if(value==userDetail.belong)
                        option(value=value selected)=company
                    else
                        option(value=value)=company
                label.col-sm-2.col-sm-offset-3.control-label(for="signUpBelong") 所属公司：
                div.col-sm-4
                    select.form-control(id="signUpBelong" name="user[belong]")
                        +belong("main","总部")
                        +belong("shanghai","上海分公司")
                        +belong("wuhan","武汉分公司")
                        +belong("changsha","长沙分公司")
                        +belong("shenzhen","深圳分公司")
                        +belong("hunan","湖南分公司")
                        +belong("hefei","合肥分公司")
                        +belong("guangzhou","广州分公司")
            div.form-group
                div.col-sm-offset-5.col-sm-2.text-center
                    input.btn.btn-success(id="submit" type="submit" value="提交")
                div.col-sm-2.text-center
                    input.btn.btn-warning(id="reset" type="reset" value="重置")

block js
    script(src="/admin/js/userUpdate.js")
